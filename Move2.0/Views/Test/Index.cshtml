@model Move2._0.ViewModel.Test.TestIndexViewModel

@{
    ViewBag.Title = "PLACEMENT TEST";
    var estaAutenticado = this.User.Identity.IsAuthenticated;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 moveHeader visible-lg">
            <h2 class="text-right text-bold">PLACEMENT TEST</h2>
        </div>
    </div>

@using (Html.BeginForm("TestNivel", "Test", FormMethod.Post, new { @class = "form-horizontal" }))
{

    if (estaAutenticado)
    {

        <div class="row">
            <div class="col-md-offset-4 col-md-4">

                @Html.HiddenFor(model => Model.NivelTestId)

                <h3>Datos personales</h3>

                <div class="form-group row">
                    @Html.LabelFor(M => Model.Email, new { @class = "col-md-3 col-form-label" })
                    @Html.TextBoxFor(M => Model.Email, new { @class = "form-control col-md-9", @placeholder = "name@example.com", @readonly = "readonly" })
                    @Html.ValidationMessageFor(M => Model.Email)
                </div>
                <div class="form-group row">
                    @Html.LabelFor(M => Model.Nombre, new { @class = "col-md-3 col-form-label" })
                    @Html.TextBoxFor(M => Model.Nombre, new { @class = "form-control col-md-9", @readonly = "readonly" })
                    @Html.ValidationMessageFor(M => Model.Nombre)
                </div>

                <input type="submit" class="js-submit btn btn-success btn-lg" value="Comenzar Test" />

            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-offset-4 col-md-4">

                <h3>Datos personales</h3>

                @Html.HiddenFor(model => Model.NivelTestId)

                <div class="form-group row">
                    @Html.LabelFor(M => Model.Email, new { @class = "col-md-3 col-form-label" })
                    @Html.TextBoxFor(M => Model.Email, new { @class = "form-control col-md-9", @placeholder = "name@example.com" })
                    @Html.ValidationMessageFor(M => Model.Email)
                </div>
                <div class="form-group row">
                    @Html.LabelFor(M => Model.Nombre, new { @class = "col-md-3 col-form-label" })
                    @Html.TextBoxFor(M => Model.Nombre, new { @class = "form-control col-md-9" })
                    @Html.ValidationMessageFor(M => Model.Nombre)
                </div>

                <input type="submit" class="js-submit btn btn-success btn-lg" value="Comenzar Test" />

            </div>
        </div>
    }
}


</div>


